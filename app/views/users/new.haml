.reg
  %h1= image_tag("reg_title.gif")
  = error_messages_for :user
  - form_for @user,:user, :url => account_path do |f|
    %table{:cellspacing=>0, :cellpadding=>0,:border=>0}
      %tr
        %th{:width =>150} 用户名
        %td= f.text_field :login      
      %tr
        %th 昵称
        %td= f.text_field :name      
      %tr
        %th 邮箱
        %td= f.text_field :email      
      %tr
        %th 密码
        %td= f.text_field :password
      %tr
        %th 密码确认
        %td= f.text_field :password_confirmation
    .btns.clearfix
      .accept
        = f.check_box :terms_of_service
        我已接受本站协议
      .btn= image_submit_tag("regbtn.gif") 
!!! Strict
%html{ html_attrs("en_us") }
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "content-type"}/
    %title= yield(:title) || '杯杯干,最健康的酒品社区网'
    = yield(:description)
    = yield(:keywords)
    %link{:href => "/stylesheets/bbg_v1.css",:rel=>"stylesheet",:type=>"text/css"}/
    %script{:type =>"text/"+"javascript",:src=> "/javascripts/jquery.js"}
    %script{:type =>"text/"+"javascript",:src=> "/javascripts/bbg_v1.js"}
    %script{:type =>"text/"+"javascript",:src=> "/javascripts/roundies.js"}
    = yield :css
    = yield :js
    / [if lt IE 7]
      %script{:type =>"text/"+"javascript",:src=> "/javascripts/unitpngfix.js"}
  %body
    #header
      .wrapper
        #logo-wrap
          %a.hide-text{:id => 'logo', :href => '/'}杯杯干
          %a{:id => 'nav-help', :href => '/faq'}帮助
        #navigation
          %ul.clearfix
            - tabs_tag(:builder => MenuTabBuilder) do |tab|
              = tab.home    '首页',    '/' 
              = tab.wine    '酒品目录',  '/wines'
              = tab.wiki    '酒品百科',  '/wikis'
              = tab.shop    '网络商城',  '/shops'
              = tab.forum   '电子社区',  '/forums'
              = tab.bid     '拍卖',    '/bids'
        #my= render :partial => 'users/bar'
    
    #container.wrapper.clearfix
      - content_tag(:div, :id => "flash") do
        - flash.each do |key, value|
          - content_tag(:div, :class=> "flash_#{key}") do
            = value
      = @content_for_layout
      
    #ft.wrapper
      %ul
        %li.start= link_to '购物保障', '#'
        %li= link_to '服务条款', '#'
        %li= link_to '安全说明', '#'
        %li= link_to '隐私声明', '#'
        %li= 'Copyright @ 2009 BeiBeiGan.com'
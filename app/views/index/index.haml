- js('slider')
#loopedSlider.clearfix
  .sliders
    .slides
      %div= image_tag('/sliders/slider_1.jpg', :width =>'870', :height =>'370')
      %div= image_tag('/sliders/slider_2.jpg', :width =>'870', :height =>'370')
      %div= image_tag('/sliders/slider_3.jpg', :width =>'870', :height =>'370')
      %div= image_tag('/sliders/slider_4.jpg', :width =>'870', :height =>'370')
      %div= image_tag('/sliders/slider_5.jpg', :width =>'870', :height =>'370')

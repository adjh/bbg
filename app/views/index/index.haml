#flash_content
  %img{:src => '/images/banner.jpg', :width => '885', :height => '370'}
#index_content
  #main_index
  #side_index.clearfix
    #tsidebar.side-right-margin
      .side_search
        %img{:src => '/images/searchtitle.gif', :style => 'padding: 14px 9px 2px 9px;'}
        %img{:src => '/images/searchtext.gif', :style => 'padding: 2px 9px 0px 9px;'}
        .fast_search
          %form{:style => 'padding:8px 5px 8px 8px;'}
            %input{:type => 'text', :name => 'keywords', :size =>15, :value => ''}
            = link_to image_tag('searchbtn.gif',:title => '搜索', :style => 'float: left;margin-left: 2px;'), '#'
          %br/
          = link_to image_tag('searchlink.gif'), '#', :style => 'padding: 0 0 6px 9px;'
          = link_to image_tag('help.gif'), '#', :style => 'padding: 0 0 6px 9px;padding-left: 30px;'
      %br/
      %ul{:style => 'border: 1px solid #CCC;padding: 0 9px 10px 9px;margin-bottom:10px;'}
        - (1..3).each do |id|
          %li
            %p= link_to '美酒仙境——瑞事临酒庄','#'
            %img{:src => "/images/tmp/jz0#{id}.gif"}
          %li{:style=>'background:#CCC;height:1px;margin:8px 0px;'}
            
    #tsidebar.imglinks
      %ul
        - (1..9).each do |i|
          %li= link_to image_tag("tmp/links0#{i}.gif"), '#'
